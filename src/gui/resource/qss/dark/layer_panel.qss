
#LayerTree {
    background-color: transparent;
    border: none;
    color: white;
}

QTreeWidget {
    background-color: transparent;
    border: none;
}

QTreeWidget::item {
    padding: 8px;
    border-radius: 4px;
    color: white;
}

QTreeWidget::item:hover {
    background-color: rgba(255, 255, 255, 0.06);
}

QTreeWidget::item:selected {
    background-color: rgba(255, 255, 255, 0.1);
    color: white;
}

QLabel {
    color: white;
}
